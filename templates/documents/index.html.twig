{% extends 'base.html.twig' %}

{% block title %}Документы{% endblock %}

{% block body %}
    <h1>Документы</h1>

    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Содержимое</th>
                <th>Возможные действия</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.title }}</td>
                <td>{{ document.description }}</td>
                <td>{{ document.content }}</td>
                <td>
                    <a href="{{ path('app_documents_show', {'id': document.id}) }}">Показать</a>
                    <a href="{{ path('app_documents_edit', {'id': document.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_documents_new') }}">Создать новую запись</a>
{% endblock %}
