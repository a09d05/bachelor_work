{% extends 'base.html.twig' %}

{% block title %}Multimedia index{% endblock %}

{% block body %}
    <h1>Multimedia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Description</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for multimedia in multimedia %}
            <tr>
                <td>{{ multimedia.id }}</td>
                <td>{{ multimedia.title }}</td>
                <td>{{ multimedia.type }}</td>
                <td>{{ multimedia.description }}</td>
                <td>{{ multimedia.content }}</td>
                <td>
                    <a href="{{ path('app_multimedia_show', {'id': multimedia.id}) }}">show</a>
                    <a href="{{ path('app_multimedia_edit', {'id': multimedia.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_multimedia_new') }}">Create new</a>
{% endblock %}
