{% extends 'base.html.twig' %}

{% block title %}Список отделов{% endblock %}

{% block body %}
    <style> a {text-decoration: none;} </style>

    <h1>Список отделов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>№ отдела</th>
                <th>Название отдела</th>
                <th>Возможные действия</th>
            </tr>
        </thead>
        <tbody>
        {% for dept in depts %}
            <tr>
                <td>{{ dept.id }}</td>
                <td>{{ dept.deptName }}</td>
                <td>
                    <a href="{{ path('app_depts_show', {'id': dept.id}) }}">Показать</a>
                    <a href="{{ path('app_depts_edit', {'id': dept.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_depts_new') }}">Создать новую запись</a>
    <a href="{{ path('app_home_page') }}">Вернуться на главную</a>
{% endblock %}
